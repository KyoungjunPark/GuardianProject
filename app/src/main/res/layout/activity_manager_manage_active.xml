<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activity.Manager.ManagerManageActiveActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout5"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="5dp"
        android:background="#9c57ec">

        <TextView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/mma_door"
            android:background="@drawable/doorclose"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/mma_repri"
            android:background="@drawable/reprigerator"
            android:layout_column="1"
            android:layout_below="@+id/mma_door"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:id="@+id/mma_toilet"
            android:layout_column="1"
            android:background="@drawable/toilet"
            android:layout_below="@+id/mma_repri"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/mma_doortime"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/mma_door"
            android:layout_toEndOf="@+id/mma_door"
            android:gravity="center_vertical|center_horizontal"
            android:text="1시간 지남"
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textSize="20dp"
            android:background="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/mma_repritime"
            android:layout_alignTop="@+id/mma_repri"
            android:layout_toRightOf="@+id/mma_repri"
            android:layout_toEndOf="@+id/mma_repri"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="2시간 지남"
            android:background="#ffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/mma_toilettime"
            android:layout_below="@+id/mma_repri"
            android:layout_toRightOf="@+id/mma_repri"
            android:layout_toEndOf="@+id/mma_repri"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="3시간 지남"
            android:background="#ffffff" />

    </RelativeLayout>

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/M_senior_active_chart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
