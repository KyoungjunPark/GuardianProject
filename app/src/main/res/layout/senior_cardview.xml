<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/senior_cardview"
        card_view:cardCornerRadius="3dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/ic_person_black"/>

            <RelativeLayout
                android:layout_width="178dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름  :  "
                    android:id="@+id/vname"
                    android:layout_marginTop="13dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputvname"
                    android:layout_alignTop="@+id/vname"
                    android:layout_toRightOf="@+id/vname"
                    android:layout_toEndOf="@+id/vname"
                    android:layout_alignBottom="@+id/vname"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:text="박경준" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이  :  "
                    android:id="@+id/vage"
                    android:layout_below="@+id/vname"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:id="@+id/inputvage"
                    android:layout_alignTop="@+id/vage"
                    android:layout_toRightOf="@+id/vage"
                    android:layout_toEndOf="@+id/vage"
                    android:layout_alignBottom="@+id/vage"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별  :  "
                    android:id="@+id/vgender"
                    android:layout_alignTop="@+id/inputvage"
                    android:layout_toRightOf="@+id/inputvage"
                    android:layout_toEndOf="@+id/inputvage"
                    android:layout_marginLeft="20dp"
                    android:layout_alignBottom="@+id/inputvage"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남"
                    android:id="@+id/inputvgender"
                    android:layout_alignTop="@+id/vgender"
                    android:layout_toRightOf="@+id/vgender"
                    android:layout_toEndOf="@+id/vgender"
                    android:layout_alignBottom="@+id/vgender"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vcall"
                    android:id="@+id/vcallbutton"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="18dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
