<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.activity.RegistrationActivity"
    android:background="#b59dff">

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="회원가입"
        android:id="@+id/textView7"
        android:background="@drawable/login_edittext"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/seniorjoinbutton"
        android:background="@drawable/joinbutton"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <GridLayout
    android:layout_width="wrap_content"
    android:layout_height="380dp"
    android:layout_below="@+id/textView7"
    android:layout_marginTop="20dp"
    android:background="#ffffff"
        android:id="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="10dp" />

        <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/my_id"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/my_name"
            android:textColor="#000000"
            android:singleLine="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignLeft="@+id/my_id"
            android:layout_alignStart="@+id/my_id"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
            android:textColor="#000000"
        android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="10dp" />

        <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/my_pw"
        android:textColor="#000000"
        android:singleLine="true"
        android:password="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/my_name"
        android:layout_alignStart="@+id/my_name"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:id="@+id/textView5"
            android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="10dp" />

        <RadioGroup
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:orientation="horizontal"
        android:layout_alignRight="@+id/my_pw"
        android:layout_alignEnd="@+id/my_pw"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/radioGroup"
        android:layout_row="3"
        android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남"
            android:id="@+id/radioButton"
            android:layout_alignTop="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="#000000" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여"
            android:id="@+id/radioButton2"
            android:layout_alignTop="@+id/radioButton"
            android:layout_toRightOf="@+id/seniorjoinbutton"
            android:layout_toEndOf="@+id/seniorjoinbutton"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000000" />

    </RadioGroup>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연락처"
        android:id="@+id/textView6"
            android:textSize="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/my_pn"
            android:layout_alignTop="@+id/textView6"
            android:singleLine="true"
            android:phoneNumber="true"
            android:layout_alignLeft="@+id/my_pw"
            android:layout_alignRight="@+id/my_pw"
            android:layout_alignEnd="@+id/my_pw"
            android:textColor="#000000"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:id="@+id/textView"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginTop="10dp" />

        <Button
        android:layout_width="212dp"
        android:layout_height="35dp"
        android:id="@+id/tomap"
        android:layout_alignTop="@+id/textView"
        android:background="@drawable/login_edittext"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/my_pn"
        android:layout_alignStart="@+id/my_pn"
        android:layout_row="5"
        android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:hint="클릭해서 주소 찾기"
            android:gravity="center_vertical|start" />

        <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/detailaddress"
        android:textColor="#000000"
        android:singleLine="true"
        android:autoLink="map"
        android:hint="상세 주소"
        android:layout_below="@+id/tomap"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tomap"
        android:layout_alignStart="@+id/tomap"
        android:layout_alignRight="@+id/my_pn"
        android:layout_alignEnd="@+id/my_pn"
        android:textSize="15dp"
        android:layout_row="6"
        android:layout_column="1"
            android:layout_marginLeft="10dp" />

    </GridLayout>

</RelativeLayout>
