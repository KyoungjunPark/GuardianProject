<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.guardian.ui.activity.Senior.SeniorFragmentOneMeasureResultActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9c57ec"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/stoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#9c57ec"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/sfomrback"
                android:background="@drawable/leftarrow"
                android:layout_alignBottom="@+id/appbar"
                android:layout_alignLeft="@+id/appbar"
                android:layout_alignTop="@+id/appbar" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bmp"
        android:id="@+id/relativeLayout3"
        android:layout_marginTop="114dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/pulseResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50sp"
            android:textIsSelectable="false"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp" />
    </RelativeLayout>

    <ProgressBar
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/seniorpulseProgressBar"
    android:layout_below="@+id/relativeLayout3"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="70dp"
    android:max="110"
    android:progress="110"
    android:scrollIndicators="top"
    android:indeterminate="false"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40"
        android:id="@+id/textMinpulse"
        android:layout_below="@+id/seniorpulseProgressBar"
        android:layout_alignLeft="@+id/seniorpulseProgressBar"
        android:layout_alignStart="@+id/seniorpulseProgressBar"
        android:textColor="#7e7e7e"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150"
        android:id="@+id/textMaxpulse"
        android:textColor="#7e7e7e"
        android:textSize="20dp"
        android:layout_below="@+id/seniorpulseProgressBar"
        android:layout_alignRight="@+id/seniorpulseProgressBar"
        android:layout_alignEnd="@+id/seniorpulseProgressBar" />




</RelativeLayout>
