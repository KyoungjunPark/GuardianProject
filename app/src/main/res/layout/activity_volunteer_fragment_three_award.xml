<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activity.Volunteer.VolunteerFragmentThreeAwardActivity"
     android:background="@drawable/awardbackground"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="봉사확인증"
        android:id="@+id/awardName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="38dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="35dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/awardName"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/awardWinner"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/awardContent"
            android:layout_below="@+id/awardWinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/awardDay"
            android:layout_marginTop="33dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/awardContent"
            android:layout_alignLeft="@+id/awardContent"
            android:layout_alignStart="@+id/awardContent"
            android:layout_marginLeft="120dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/awardSignature"
            android:scaleType="fitStart"
            android:layout_alignLeft="@+id/awardDay"
            android:layout_alignStart="@+id/awardDay"
            android:layout_below="@+id/awardDay"
            android:layout_alignRight="@+id/awardContent"
            android:layout_alignEnd="@+id/awardContent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울노인복지센터"
            android:id="@+id/textView17"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000" />

    </RelativeLayout>
</RelativeLayout>
