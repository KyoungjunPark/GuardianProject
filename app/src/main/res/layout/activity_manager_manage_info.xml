<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.Manager.ManagerManageInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박경준"
            android:id="@+id/TextseniorName"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:background="@drawable/card_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(78,남)"
            android:id="@+id/TextseniorAgeGender"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_below="@+id/textView19"
            android:layout_alignRight="@+id/textView19"
            android:layout_alignEnd="@+id/textView19"
            android:layout_marginRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울특별시 동작구 상도7동 삼성래미안 아파트 1004동 2048호"
            android:id="@+id/TextseniorAddress"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_below="@+id/textAddress"
            android:layout_alignLeft="@+id/textAddress"
            android:layout_alignStart="@+id/textAddress"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:id="@+id/textAddress"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_below="@+id/TextseniorNumber"
            android:layout_alignLeft="@+id/TextseniorNumber"
            android:layout_alignStart="@+id/TextseniorNumber"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel"
            android:id="@+id/textSeniorTel"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_below="@+id/TextseniorAgeGender"
            android:layout_alignLeft="@+id/TextseniorName"
            android:layout_alignStart="@+id/TextseniorName"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01033698273"
            android:id="@+id/TextseniorNumber"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_below="@+id/textSeniorTel"
            android:layout_alignLeft="@+id/textSeniorTel"
            android:layout_alignStart="@+id/textSeniorTel"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonframe"
        android:background="#e6e6e6">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/buttonframe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/mmi_button"
            android:text="지도보기"
            android:background="#c5a3ec"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </FrameLayout>


</RelativeLayout>
