<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.guardian.ManagerRegistration"
    android:background="#b59dff">

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/managerjoinbutton"
        android:background="@drawable/joinbutton"
        android:layout_below="@+id/serialnumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Serial Number"
        android:id="@+id/SerialNumberText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="164dp"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/serialnumber"
        android:layout_below="@+id/SerialNumberText"
        android:layout_alignLeft="@+id/SerialNumberText"
        android:layout_alignStart="@+id/SerialNumberText"
        android:layout_marginTop="27dp"
        android:textColor="#ffffff"
        android:singleLine="true" />
</RelativeLayout>
